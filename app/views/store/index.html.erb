<!-- 提示信息 -->
<% if notice %>
<div class="alert alert-error fade in" id="notice">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <%= notice %>
</div>
<% end %>

<legend>Your Pragmatic Catalog</legend>
<% @products.each do |product| %>
  <div class="row-fluid">
    <div class="span3">
      <div class="center">
        <%= image_tag(product.image_url,:class =>"img-polaroid") %>
        <h4 class="text-center"><strong><%= number_to_currency(product.price) %></strong></h4>
      </div>
    </div>
    <div class="span9">
      <h3><%= product.title %></h3>
      <%= sanitize(product.description) %>
      <div class="pull-left">
        <%= button_to "加入购物车",line_items_path(:product_id => product,:format=>"js"),{:remote => true,:class=>"btn btn-primary"} %>
      </div>
    </div>
  </div>
  <hr>
<% end %>

